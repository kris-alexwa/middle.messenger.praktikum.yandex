<div class="profile">
    <span id="upload-file" class="popup-wrapper">
        {{{popupUploadFile}}}
    </span>

    <div class="profile__settings">
        <div class="profile__user-info">
            <div id="upload-file-btn" class="profile__avatar-wrapper">
                <img src={{avatarUrl}} alt="Аватар" class="profile__avatar" />
            </div>
            <div class="profile__user-wrapper">
                <p class="profile__user-name">Иван</p>
                <p class="profile__user-phone">+7 (909) 967 30 30</p>
                <p class="profile__user-nickname">ivanIvanov</p>
            </div>
        </div>

        <div class="profile__settings-list">
            <button id="change-data-btn"
                    class="profile__settings-item {{#if changeDataViewIsForm}}profile__settings-item_selected{{/if}}"
                    type="button">
                Изменить данные
            </button>
            <button id="change-password-btn"
                    class="profile__settings-item {{#if changePasswordView}}profile__settings-item_selected{{/if}}"
                    type="button">
                Изменить пароль
            </button>
            <button class="profile__settings-item profile__settings-item_exit" type="button">Выйти</button>
        </div>
        {{{widgetBar}}}
    </div>

    <div class="profile__content">
        {{#if changePasswordView}}
            <form class="profile__form">
                <ul class="profile__list profile__list_change-password">
                    <li class="profile__list-item-input">
                        <div class="profile__list-item-wrapper">
                            <label class="profile__input-label" for="old-password">Старый пароль</label>
                            {{{inputOldPassword}}}
                        </div>
                        <span id="old-password-error" class="input-error-message">Некорректный формат</span>
                    </li>
                    <li class="profile__list-item-input">
                        <div class="profile__list-item-wrapper">
                            <label class="profile__input-label" for="new-password">Новый пароль</label>
                            {{{inputNewPassword}}}
                        </div>
                        <span id="new-password-error" class="input-error-message">Некорректный формат</span>
                    </li>
                    <li class="profile__list-item-input">
                        <div class="profile__list-item-wrapper">
                            <label class="profile__input-label" for="new-password-repeat">Повторите новый пароль</label>
                            {{{inputNewPasswordRepeat}}}
                        </div>
                        <span id="repeat-new-password-error" class="input-error-message">Некорректный формат</span>
                    </li>
                </ul>
                <div class="profile__btn-save-wrapper">
                    {{{activeButtonChangePassword}}}
                </div>
            </form>
        {{else}}
            {{#if changeDataViewIsDefault}}
                <ul class="profile__list profile__list_data">
                    <li class="profile__list-item">
                        <p class="profile__list-item-title">Почта</p>
                        <p class="profile__list-item-info">pochta@yandex.ru</p>
                    </li>
                    <li class="profile__list-item">
                        <p class="profile__list-item-title">Логин</p>
                        <p class="profile__list-item-info">ivanivanov</p>
                    </li>
                    <li class="profile__list-item">
                        <p class="profile__list-item-title">Имя</p>
                        <p class="profile__list-item-info">Иван</p>
                    </li>
                    <li class="profile__list-item">
                        <p class="profile__list-item-title">Фамилия</p>
                        <p class="profile__list-item-info">Иванов</p>
                    </li>
                    <li class="profile__list-item">
                        <p class="profile__list-item-title">Имя в чате</p>
                        <p class="profile__list-item-info">ivanIvanov</p>
                    </li>
                    <li class="profile__list-item">
                        <p class="profile__list-item-title">Телефон</p>
                        <p class="profile__list-item-info">+7 (909) 967 30 30</p>
                    </li>
                </ul>
            {{else if changeDataViewIsForm}}
                <form class="profile__form">
                    <ul class="profile__list profile__list_data">
                        <li class="profile__list-item-input">
                            <div class="profile__list-item-wrapper">
                                <label class="profile__input-label" for="email">Почта</label>
                                {{{inputEmail}}}
                            </div>
                            <span id="email-error" class="input-error-message">Некорректный формат</span>
                        </li>
                        <li class="profile__list-item-input">
                            <div class="profile__list-item-wrapper">
                                <label class="profile__input-label" for="login">Логин</label>
                                {{{inputLogin}}}
                            </div>
                            <span id="login-error" class="input-error-message">Некорректный формат</span>
                        </li>
                        <li class="profile__list-item-input">
                            <div class="profile__list-item-wrapper">
                                <label class="profile__input-label" for="first-name">Имя</label>
                                {{{inputFirstName}}}
                            </div>
                            <span id="first-name-error" class="input-error-message">Некорректный формат</span>
                        </li>
                        <li class="profile__list-item-input">
                            <div class="profile__list-item-wrapper">
                                <label class="profile__input-label" for="second-name">Фамилия</label>
                                {{{inputSecondName}}}
                            </div>
                            <span id="second-name-error" class="input-error-message">Некорректный формат</span>
                        </li>
                        <li class="profile__list-item-input">
                            <div class="profile__list-item-wrapper">
                                <label class="profile__input-label" for="display-name">Имя в чате</label>
                                {{{inputDisplayName}}}
                            </div>
                            <span id="display-name-error" class="input-error-message">Некорректный формат</span>
                        </li>
                        <li class="profile__list-item-input">
                            <div class="profile__list-item-wrapper profile__list-item-wrapper_last-child">
                                <label class="profile__input-label" for="phone">Телефон</label>
                                {{{inputPhone}}}
                            </div>
                            <span id="phone-error" class="input-error-message">Некорректный формат</span>
                        </li>
                    </ul>
                    <div class="profile__btn-save-wrapper">
                        {{{activeButtonChangeData}}}
                    </div>
                </form>
            {{/if}}
        {{/if}}
    </div>
</div>
